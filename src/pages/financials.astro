---
import MainLayout from "../layouts/MainLayout.astro";
import FinancialModel from "../components/FinancialModel";
---

<MainLayout title="JustCook - Financial Model & Projections">
	<section class="section model-section">
		<div class="container">
			<FinancialModel client:load />
		</div>
	</section>
</MainLayout>

<style>
	/* Remove nested main and use proper body background */
	:global(body) {
		background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
		min-height: 100vh;
	}

	/* Dark mode for financials page */
	:global(.dark-mode body) {
		background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
	}

	.model-section {
		background: var(--bg-primary);
		border-radius: 24px 24px 0 0;
		margin-top: 2rem;
		box-shadow: var(--shadow-lg);
		min-height: calc(100vh - 140px);
		padding-top: 2rem;
	}

	@media (max-width: 768px) {
		.model-section {
			border-radius: 16px 16px 0 0;
			margin-top: 1.5rem;
			min-height: calc(100vh - 120px);
			overflow-x: hidden;
			padding-top: 1rem;
		}
		
		/* Ensure all containers are properly contained */
		:global(.container) {
			padding: 0 1rem;
			max-width: 100%;
			overflow-x: hidden;
		}
	}

	@media (max-width: 480px) {
		.model-section {
			margin-top: 4.5rem;
			padding-top: 0.5rem;
			min-height: calc(100vh - 120px);
		}
	}
</style> 