---
import MainLayout from "../layouts/MainLayout.astro";
import FinancialModel from "../components/FinancialModel";
---

<MainLayout title="JustCook - Financial Model & Projections">
	<main class="financials-page">
		<section class="intro-section">
			<div class="container">
				<nav class="breadcrumb">
					<a href="/">&larr; Back to Home</a>
				</nav>
				<h1>Financial Model & Projections</h1>
				<p class="intro-text">
					Explore JustCook's unit economics and financial projections through interactive models. 
					Adjust key assumptions to see how different scenarios impact our path to profitability.
				</p>
				
				<div class="key-assumptions">
					<h2>Key Business Assumptions</h2>
					<div class="assumptions-grid">
						<div class="assumption-card modern">
							<div class="assumption-header">
								<div class="accent-bar blue"></div>
								<h3>Customer Acquisition</h3>
							</div>
							<div class="assumption-metrics">
								<div class="metric-row">
									<span class="metric-label">CAC Range:</span>
									<span class="metric-value">AED 60-90</span>
								</div>
								<div class="metric-row">
									<span class="metric-label">Payback Period:</span>
									<span class="metric-value">2.5-3.5 months</span>
								</div>
								<div class="metric-row">
									<span class="metric-label">Order Volume:</span>
									<span class="metric-value">60-150 daily</span>
								</div>
							</div>
						</div>
						
						<div class="assumption-card modern">
							<div class="assumption-header">
								<div class="accent-bar green"></div>
								<h3>Revenue Model</h3>
							</div>
							<div class="assumption-metrics">
								<div class="metric-row">
									<span class="metric-label">AOV Range:</span>
									<span class="metric-value">AED 80-110</span>
								</div>
								<div class="metric-row">
									<span class="metric-label">Contribution Margin:</span>
									<span class="metric-value">32-42%</span>
								</div>
								<div class="metric-row">
									<span class="metric-label">Order Frequency:</span>
									<span class="metric-value">2.5 orders/month</span>
								</div>
							</div>
						</div>
						
						<div class="assumption-card modern">
							<div class="assumption-header">
								<div class="accent-bar orange"></div>
								<h3>Operational Efficiency</h3>
							</div>
							<div class="assumption-metrics">
								<div class="metric-row">
									<span class="metric-label">Fixed Costs:</span>
									<span class="metric-value">AED 65K-110K</span>
								</div>
								<div class="metric-row">
									<span class="metric-label">Target LTV:CAC:</span>
									<span class="metric-value">&gt; 3.5 ratio</span>
								</div>
								<div class="metric-row">
									<span class="metric-label">Churn Rate:</span>
									<span class="metric-value">7-12% monthly</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<section class="model-section">
			<div class="container">
				<FinancialModel client:load />
			</div>
		</section>


	</main>
</MainLayout>

<style>
	.financials-page {
		background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
		min-height: 100vh;
		transition: background 0.3s ease;
	}

	/* Dark mode for financials page */
	.dark-mode .financials-page {
		background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
	}

	.container {
		max-width: 1200px;
		margin: 0 auto;
		padding: 0 2rem;
	}

	.breadcrumb {
		margin-bottom: 2rem;
		text-align: left;
	}

	.breadcrumb a {
		color: var(--color-secondary);
		text-decoration: none;
		font-weight: 500;
		transition: color 0.3s ease;
	}

	.breadcrumb a:hover {
		color: var(--color-primary);
	}

	.intro-section {
		padding: 2rem 0 1rem;
		text-align: center;
	}

	.intro-section h1 {
		font-family: 'Poppins', sans-serif;
		font-size: clamp(2.5rem, 5vw, 4rem);
		margin-bottom: 1rem;
		color: var(--text-heading);
		line-height: 1.2;
	}

	.intro-text {
		font-size: 1.2rem;
		color: var(--text-secondary);
		max-width: 600px;
		margin: 0 auto 2rem;
		line-height: 1.6;
	}

	.key-assumptions {
		text-align: left;
		margin-top: 1rem;
	}

	.key-assumptions h2 {
		text-align: center;
		margin-bottom: 2rem;
		font-family: 'Poppins', sans-serif;
		font-size: clamp(2rem, 4vw, 3rem);
		font-weight: 700;
		color: var(--text-heading);
		line-height: 1.2;
	}

	.assumptions-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
		gap: 2rem;
		margin-bottom: 1rem;
	}

	.assumption-card.modern {
		background: rgba(255, 255, 255, 0.05);
		backdrop-filter: blur(32px);
		border: 1px solid rgba(255, 255, 255, 0.1);
		border-radius: 20px;
		padding: 2rem;
		box-shadow: 0 32px 64px rgba(0, 0, 0, 0.15);
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
	}

	.assumption-card.modern:hover {
		transform: translateY(-8px);
		box-shadow: 0 48px 80px rgba(0, 0, 0, 0.2);
	}

	.assumption-header {
		display: flex;
		align-items: center;
		gap: 0.75rem;
		margin-bottom: 1.5rem;
	}

	.accent-bar {
		width: 3px;
		height: 24px;
		border-radius: 2px;
	}

	.accent-bar.blue {
		background: linear-gradient(135deg, #3b82f6, #8b5cf6);
	}

	.accent-bar.green {
		background: linear-gradient(135deg, #10b981, #059669);
	}

	.accent-bar.orange {
		background: linear-gradient(135deg, #f59e0b, #d97706);
	}

	.assumption-card.modern h3 {
		margin: 0;
		font-size: 1.25rem;
		font-weight: 600;
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
	}

	.assumption-card.modern:nth-child(1) h3 {
		background: linear-gradient(135deg, #3b82f6, #8b5cf6);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.assumption-card.modern:nth-child(2) h3 {
		background: linear-gradient(135deg, #10b981, #059669);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.assumption-card.modern:nth-child(3) h3 {
		background: linear-gradient(135deg, #f59e0b, #d97706);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
	}

	.assumption-metrics {
		display: flex;
		flex-direction: column;
		gap: 1rem;
	}

	.metric-row {
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0.75rem 0;
		border-bottom: 1px solid rgba(255, 255, 255, 0.08);
	}

	.metric-row:last-child {
		border-bottom: none;
	}

	.metric-label {
		color: var(--text-body);
		font-weight: 500;
	}

	.metric-value {
		font-weight: 600;
		color: var(--text-heading);
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, monospace;
	}

	.model-section {
		padding: 2rem 0;
		background: var(--bg-primary);
		border-radius: 24px 24px 0 0;
		margin-top: 1rem;
		box-shadow: var(--shadow-lg);
	}


	@media (max-width: 768px) {
		.intro-section h1 {
			font-size: 2rem;
		}

		.assumptions-grid {
			grid-template-columns: 1fr;
		}

		.container {
			padding: 0 1rem;
		}
	}
</style> 