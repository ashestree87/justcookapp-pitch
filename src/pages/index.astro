import SolutionSection from "../components/sections/SolutionSection.astro";
import AppDemoSection from "../components/sections/AppDemoSection.astro";
import MarketSection from "../components/sections/MarketSection.astro";
import DataVizSection from "../components/sections/DataVizSection.astro";
import HowItWorksSection from "../components/sections/HowItWorksSection.astro";
import TechStackSection from "../components/sections/TechStackSection.astro";
import ArchitectureSection from "../components/sections/ArchitectureSection.astro";
import PerformanceSection from "../components/sections/PerformanceSection.astro";
import CodeSnippetsSection from "../components/sections/CodeSnippetsSection.astro";
import TeamSection from "../components/sections/TeamSection.astro";
import ContactSection from "../components/sections/ContactSection.astro";
import PitchDeckModal from "../components/PitchDeckModal.astro";

