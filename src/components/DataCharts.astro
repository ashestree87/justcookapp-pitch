<div class="chart-row grid grid-2">
  <div class="chart-container card">
    <h3>User Growth Projection</h3>
    <div class="chart">
      <canvas id="userGrowthCanvas"></canvas>
    </div>
  </div>
  
  <div class="chart-container card">
    <h3>Revenue Streams</h3>
    <div class="chart">
      <canvas id="revenueCanvas"></canvas>
    </div>
  </div>
</div>

<div class="chart-row grid grid-2 mt-5">
  <div class="chart-container card">
    <h3>Market Penetration</h3>
    <div class="chart">
      <canvas id="marketCanvas"></canvas>
    </div>
  </div>
  
  <div class="chart-container card">
    <h3>User Engagement</h3>
    <div class="chart">
      <canvas id="engagementCanvas"></canvas>
    </div>
  </div>
</div>

<script is:inline src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // User Growth Chart
    const userGrowthCtx = document.getElementById('userGrowthCanvas');
    if (userGrowthCtx) {
      // @ts-ignore
      new Chart(userGrowthCtx, {
        type: 'line',
        data: {
          labels: ['Q1', 'Q2', 'Q3', 'Q4'],
          datasets: [{
            label: 'User Growth',
            data: [1200, 1900, 3000, 5000],
            fill: true,
            backgroundColor: 'rgba(6, 175, 240, 0.1)',
            borderColor: '#06AFF0',
            pointBackgroundColor: '#06AFF0',
            tension: 0.4
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'top',
            },
            tooltip: {
              mode: 'index',
              intersect: false,
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              title: {
                display: true,
                text: 'Users'
              }
            },
            x: {
              title: {
                display: true,
                text: 'Quarter'
              }
            }
          }
        }
      });
    }
    
    // Revenue Chart
    const revenueCtx = document.getElementById('revenueCanvas');
    if (revenueCtx) {
      // @ts-ignore
      new Chart(revenueCtx, {
        type: 'doughnut',
        data: {
          labels: ['Gen Z', 'Millennials', 'Gen X', 'Boomers'],
          datasets: [{
            label: 'Adoption Rate (%)',
            data: [78, 65, 42, 28],
            backgroundColor: [
              '#06AFF0',
              '#0590C8',
              '#2EC4B6',
              '#FFBF69'
            ],
            borderWidth: 0
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'right',
            }
          }
        }
      });
    }
    
    // Market Chart
    const marketCtx = document.getElementById('marketCanvas');
    if (marketCtx) {
      // @ts-ignore
      new Chart(marketCtx, {
        type: 'bar',
        data: {
          labels: ['2022', '2023', '2024 (Projected)', '2025 (Projected)'],
          datasets: [{
            label: 'Market Size ($ Billions)',
            data: [15.2, 18.7, 23.5, 29.8],
            backgroundColor: 'rgba(6, 175, 240, 0.2)',
            borderColor: '#06AFF0',
            borderWidth: 2,
            pointBackgroundColor: '#06AFF0',
            pointRadius: 5,
            tension: 0.3
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: {
              position: 'top',
            }
          },
          scales: {
            y: {
              beginAtZero: true,
              title: {
                display: true,
                text: 'Market Share (%)'
              }
            }
          }
        }
      });
    }
    
    // Engagement Chart
    const engagementCtx = document.getElementById('engagementCanvas');
    if (engagementCtx) {
      // @ts-ignore
      new Chart(engagementCtx, {
        type: 'radar',
        data: {
          labels: ['Q1', 'Q2', 'Q3', 'Q4'],
          datasets: [{
            label: 'User Engagement (hours/week)',
            data: [2.3, 3.1, 4.2, 5.5],
            backgroundColor: '#06AFF0'
          }]
        },
        options: {
          responsive: true,
          maintainAspectRatio: false,
          scales: {
            r: {
              angleLines: {
                display: true
              },
              suggestedMin: 0,
              suggestedMax: 100
            }
          }
        }
      });
    }
  });
</script>

<style>
  .chart-container {
    height: 300px;
    padding: 1.5rem;
  }
  
  .chart {
    height: 100%;
    width: 100%;
  }
  
  .mt-5 {
    margin-top: 3rem;
  }
</style> 